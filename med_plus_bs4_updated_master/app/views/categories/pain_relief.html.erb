<h3 class="mt-4">Pain Relief</h3>
  <div class="precaution-wrap mb-4">
   
  </div>
 <div class="center">
  <div class="row row-eq-height">
   <% @pain_reliefs.each do |pain_relief| %>
    <!-- Cards -->
    <!-- pain_reliefs -->
    <div class="col-sm-6 col-md-6 col-lg-3">
       <div class="card mb-3">
          <% if pain_relief.image? %>
           <%= image_tag pain_relief.image, class:"card-img-top" %>
          <% end %> 

  
        <div class="card-body">
          <p class="card-text card-bottom">
            <h5 class="category-top"><%= pain_relief.title %></h5>
            Lorem ipsum dolor amet echo park cronut typewriter, skateboard letterpress sriracha four dollar toast four loko raw denim godard coloring book.
          </p>
  
           <div class="view-margin"><%= link_to "View More", post_path(pain_relief),class:"btn btn-outline-success btn-block" %></div>
           <!-- like and comment numbers -->
           <div class="icons-nums pt-3">
              <div class="index_icons"> 
                <% if pain_relief.likes.size >= 1 %>
                  <span class="far fa-heart index_like-icon"></span><%= pain_relief.likes.size %> 
                <% else %>
                  <span class="far fa-heart index_like-icon_zero"></span><%= pain_relief.likes.size %>
                <% end %>

              <span style="margin-right: 25px;"></span>

                <% if pain_relief.comments.size >= 1 %>
                  <span class="far fa-comments index_comments-icon"></span><%= pain_relief.comments.size %>  
                <% else %>
                  <span class="far fa-comments index_comments-icon_zero"></span><%= pain_relief.comments.size %> 
                <% end %>
            </div>
           </div><!-- end of like and comment numbers -->
        </div><!-- end of card-body -->

      </div><!-- end of card mb-3 -->
    </div><!-- end of col-3 -->
   <% end %> <!-- end of @pain_reliefs.each do |pain_relief| -->
 </div><!-- end of row  row-eq-height-->
 <p><%= link_to "一覧に戻る", root_path,class:"btn btn-outline-secondary" %></p>
</div><!-- end of center -->

   